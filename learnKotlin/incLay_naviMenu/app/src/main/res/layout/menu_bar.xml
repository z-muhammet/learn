<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="#323131">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/page"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Page :"
            android:textColor="#10AFA2"
            android:textSize="40sp" />

        <Button
            android:id="@+id/page_One"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:tag="1"
            android:background="@drawable/navigation_button"
            android:text="1"
            android:onClick="navitePage"
            android:textColor="#10AFA2"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@id/linearLayout"
            app:layout_constraintStart_toStartOf="@id/page"
            app:layout_constraintTop_toTopOf="@id/linearLayout" />

        <Button
            android:id="@+id/page_Two"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:tag="2"
            android:background="@drawable/navigation_button"
            android:text="2"
            android:onClick="navitePage"
            android:textColor="#10AFA2"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@id/linearLayout"
            app:layout_constraintStart_toStartOf="@id/page"
            app:layout_constraintTop_toTopOf="@id/linearLayout" />

        <Button
            android:id="@+id/page_Three"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:tag="3"
            android:onClick="navitePage"
            android:background="@drawable/navigation_button"
            android:text="3"
            android:textColor="#10AFA2"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@id/linearLayout"
            app:layout_constraintStart_toStartOf="@id/page"
            app:layout_constraintTop_toTopOf="@id/linearLayout" />

        <Button
            android:id="@+id/page_Four"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:tag="4"
            android:background="@drawable/navigation_button"
            android:text="4"
            android:onClick="navitePage"
            android:textColor="#10AFA2"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@id/linearLayout"
            app:layout_constraintStart_toStartOf="@id/page"
            app:layout_constraintTop_toTopOf="@id/linearLayout" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>